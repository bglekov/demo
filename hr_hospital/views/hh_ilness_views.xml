<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hh_ilness_tree" model="ir.ui.view">
        <field name="name">hh.ilness.tree()</field>
        <field name="model">hh.ilness</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>

     <record id="hh_ilness_form" model="ir.ui.view">
        <field name="name">hh.ilness.form()</field>
        <field name="model">hh.ilness</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id="hh_ilness_act_window" model="ir.action.act_window">
         <field name="name">Ilness</field>
         <field name="type">ir.action.act_window</field>
         <field name="res_model">hh.ilness</field>
         <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hh_ilness_menu"
              action="my_demo_act_window"
            name="Ilness" sequence="200"/>

</odoo>

